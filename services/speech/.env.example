# Configuración del Speech Service

# Configuración del servidor
SPEECH_HOST=0.0.0.0
SPEECH_PORT=8002


# Configuración de almacenamiento
STORAGE_PATH=./app/storage

# Configuración de logging
LOG_LEVEL=INFO

# Configuración de desarrollo
DEBUG=false
RELOAD=true
DEVELOPMENT_MODE=true
DEBUG_LEVEL=INFO

# Configuración de Supabase
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# Configuración de Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
# Tiempo de expiración por defecto en segundos
REDIS_DEFAULT_EXPIRE=3600

# Google API Key para Gemini (necesario para el LLM)
GOOGLE_API_KEY=

# Máximo número de preguntas técnicas a incluir en el contexto
MAX_TECHNICAL_QUESTIONS=10
# Máximo número de preguntas generales a incluir en el contexto
MAX_GENERAL_QUESTIONS=5