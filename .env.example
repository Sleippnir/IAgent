# Gateway Service
WAF_MODE=detect
JWT_PUBLIC_KEY=/keys/public.pem
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Core Service
POSTGRES_URI=postgresql://user:pass@postgres:5432/interviews
REDIS_URI=redis://redis:6379/0
JWT_PRIVATE_KEY=/keys/private.pem
JWT_PUBLIC_KEY=/keys/public.pem
JWT_ACCESS_EXPIRES=3600
JWT_REFRESH_EXPIRES=604800
INVITE_TOKEN_EXPIRES=86400

# Speech Service
STT_MODEL=whisper-large-v3
STT_DEVICE=cuda
STT_LANGUAGE=es
STT_TASK=transcribe
TTS_PROVIDER=coqui
TTS_MODEL=tts_models/es/css10/vits
TTS_DEVICE=cuda

# Optional Cloud Speech Providers
AZURE_SPEECH_KEY=
AZURE_SPEECH_REGION=
GOOGLE_APPLICATION_CREDENTIALS=

# Evaluation & Reporting Service
MONGO_URI=mongodb://mongo:27017/eval
POSTGRES_URI=postgresql://user:pass@postgres:5432/eval
PDF_TEMPLATE_DIR=/app/templates
MAX_REPORT_PAGES=50
BATCH_SIZE=10
PROCESSING_TIMEOUT=30

# Logging & Monitoring
LOG_LEVEL=INFO
ENABLE_TRACING=true

#api-key LLM for pipecat
GOOGLE_API_KEY=